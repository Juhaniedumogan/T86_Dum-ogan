#include <stdio.h>

int main(){
    
    float temp;
    printf("Enter the temperature in centigrade");
    scanf("%f", &temp);
    
    if(temp < 0)
    {
        printf("Freezing weather.");
    }
     else if ((temp <= 0) &&(temp <= 10))
    {
        printf("Very cold weather.");
    }
      if ((temp >10) && (temp <= 20))
     {
         printf("Cold weather.");
     }
      if((temp >20) && (temp <=30))
     {
         printf("Normal weather");
     }
     if ((temp > 30) && (temp <= 40))
     {
         printf("Its Hot");
     }
     if (temp >= 40)
     {
         printf("Its Very Hot");
     }
    return 0;
}
