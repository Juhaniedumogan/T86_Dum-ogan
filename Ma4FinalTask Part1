#include <stdio.h>

int main(){
    
     int i, j, k=0;
     for ( i = 1; i <= 9; i++)
     {    k = i;
         for(j = 0; j < i; j++)
         {
             printf(" ");
             {
                 for(j = 9; j >= i; j--)
                 {
                     printf("%d", k);
                     k++;
                 }
                 printf("\n");
             }
         }
     }
    return 0;
}
